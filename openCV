import cv2   
  
img = cv2.imread("D:\\cat.jpg")        #读入图像数据
cv2.namedWindow("Image")            #创建一个窗口
cv2.imshow("Image", img)                 #在窗口中显示图像
cv2.waitKey (0)  		       #保持图像
cv2.destroyAllWindows()                    #释放窗口

img.copy()                                              #复制图像
cv2.cvtColor(img,cv2.COLOR_BGR2GRAY     #获得原图像副本
cv2.imwrite(path,img, [int(cv2.IMWRITE_PNG_COMPRESSION),3])      #保存图像；最后是压缩尺寸
